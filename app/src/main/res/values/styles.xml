<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- button styles -->

    <style name="OutButton" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/colorLightButton</item>
    </style>

    <style name="ScoreButton" parent="OutButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorDarkButton</item>
    </style>

    <style name="OutNumber" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/outs_number_background</item>
        <item name="android:layout_marginRight">@dimen/right_space</item>
    </style>

<!-- text styles -->

    <style name="headline" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="team" parent="headline">
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="score" parent="team">
        <item name="android:textSize">@dimen/headline</item>
    </style>

    <!-- batting team background -->

    <style name="sub_background" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginLeft">@dimen/indent_horizontal</item>
        <item name="android:layout_marginRight">@dimen/indent_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:background">@color/sub_background</item>
    </style>

    <style name="landscape_headline" parent="headline">
        <item name="android:layout_height">@dimen/title_height</item>
    </style>





</resources>
